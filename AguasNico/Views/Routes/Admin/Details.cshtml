@model AguasNico.Models.ViewModels.Routes.Details.AdminViewModel
@using System.Globalization
@using AguasNico.Models.ViewModels.Tables

@{
    ViewData["Title"] = "Planillas";
}
<link href="~/lib/datatables/media/css/dataTables.bootstrap4.css" rel="stylesheet">

<script src="~/lib/datatables/datatables.min.js"></script>
<script src="~/js/custom/routes/admin/details/clientHistory.js"></script>
<script src="~/js/custom/routes/admin/details/dispatchedProducts.js"></script>
<script src="~/js/custom/routes/admin/details/cartStates.js"></script>
<script src="~/js/custom/routes/admin/details/confirmCart.js"></script>
<script src="~/js/custom/routes/admin/deleteCart.js"></script>
<script src="~/js/custom/routes/admin/deleteRoute.js"></script>
<script src="~/js/custom/routes/admin/details/renewAbonos.js"></script>
<script src="~/js/custom/routes/filters.js"></script>


<div class="container-fluid">
    <div class="row page-titles">
        <div class="col-md-5 col-8 align-self-center">
            <h3 class="text-themecolor m-b-0 m-t-0">Planillas</h3>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
                <li class="breadcrumb-item"><a asp-area="" asp-controller="Routes" asp-action="Index">Planillas</a></li>
                <li class="breadcrumb-item active">Detalles</li>
            </ol>
        </div>
    </div>

    <!-- MODAL DE DESPACHADOS -->
    <div id="modalDispatched" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Productos cargados en el camión</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                </div>
                <div class="modal-body">
                    <div class="col-12 table-responsive">
                        <table class="table" id="dispatchedProductsTable">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th class="col-2">Cantidad</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Cerrar</button>
                    <button type="button" onclick="confirmDispatched()" class="btn btn-success waves-effect waves-light">Confirmar carga</button>
                </div>
            </div>
        </div>
    </div>

    <!-- MODAL DE TRANSFERENCIAS -->
    <div id="modalTransfers" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Transferencias del <strong>@Model.Route.CreatedAt.ToString("dd/MM/yyyy")</strong> de <strong>@Model.Route.User.UserName</strong></h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                </div>
                <div class="modal-body">
                    <div class="col-12 table-responsive">
                        <table class="table table-striped table-bordered" id="transfersTable">
                            <thead>
                                <tr>
                                    <th>Cliente</th>
                                    <th>Monto</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Transfer transfer in Model.Transfers)
                                {
                                    <tr>
                                        <td><a target="_blank" asp-area="" asp-controller="Clients" asp-action="Details" asp-route-id="@transfer.ClientID">@Html.DisplayFor(x => transfer.Client.Name)</a></td>
                                        <td>$@Html.DisplayFor(x => transfer.Amount)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Datos del admin -->
    <div class="row">
        <div class="col-12 col-lg-6">
            <div class="card shadow">
                <div class="card-body">
                    <div class="d-flex flex-column flex-md-row justify-content-start">
                        <button type="button" class="btn btn-info" onclick="getDispatchedProducts(@Model.Route.ID)">Productos cargados</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-6">
            <div class="card shadow">
                <div class="card-body">
                        <h4 class="card-title">Total de repartos: @Model.Route.Carts.Count()</h4>
                        <h4 class="card-title mb-0">Deuda total: $@Model.Route.Carts.Select(x => x.Client).Sum(x => x.Debt).ToString("#,##")</h4>
                </div>
            </div>
        </div>
        <div class="col-xlg-6 col-lg-12">
            <div class="card shadow">
                <div class="card-body">
                    <div class="d-flex no-block">
                        <h4 class="card-title">Productos vendidos</h4>
                    </div>
                    <h6 class="card-subtitle">@Model.Route.CreatedAt.ToString("dd/MM/yyyy")</h6>
                    <div class="table-responsive">
                        <table class="table stylish-table">
                            <thead>
                                <tr>
                                    <th style="width:10%;"></th>
                                    <th>Producto/Envase</th>
                                    <th>Cargados</th>
                                    <th>Vendidos</th>
                                    <th>Devueltos</th>
                                    <th>Stock de clientes</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (SoldProductsTable product in Model.SoldProducts)
                                {
                                    <tr>
                                        <td><span class="round"><i class="ti-shopping-cart"></i></span></td>
                                        <td><h6>@Html.DisplayFor(x =>  product.Name)</h6></td>
                                        <td><h6>@Html.DisplayFor(x =>  product.Dispatched)</h6></td>
                                        <td><h5>@Html.DisplayFor(x =>  product.Sold)</h5></td>
                                        <td><h5>@Html.DisplayFor(x =>  product.Returned)</h5></td>
                                        <td><h5>@Html.DisplayFor(x =>  product.ClientStock)</h5></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- Column -->
        <div class="col-xlg-6 col-lg-12">
            <div class="row">
                <!-- Column -->
                <div class="col-md-6 col-sm-12">
                    <div class="card shadow">
                        <div class="card-body">
                            <div class="d-flex flex-row justify-content-between">
                                <div class="round round-lg align-self-center round-primary"><i class="mdi mdi-currency-usd"></i></div>
                                <div class="m-l-10 align-self-center">
                                    <h3 class="m-b-0 font-light">@Html.DisplayFor(x => Model.TotalSold)</h3>
                                    <h5 class="text-muted m-b-0">
                                        Recaudado en el día
                                        <a class="mytooltip" href="javascript:void(0)">
                                            <i class="bi bi-info-circle"></i>
                                            <span class="tooltip-content5">
                                                <span class="tooltip-text3">
                                                    <span class="tooltip-inner2">
                                                        <div class="d-flex">
                                                            <table>
                                                                <tbody>
                                                                    @foreach (CartPaymentMethod method in Model.Payments)
                                                                    {
                                                                        <tr>
                                                                            <td><h6 class="text-white text-left">@Html.DisplayFor(x => method.PaymentMethod.Name): $@Html.DisplayFor(x => method.Amount)</h6></td>
                                                                        </tr>
                                                                    }
                                                                    @if(Model.Transfers.Any())
                                                                    {
                                                                        <tr>
                                                                            <td><h6 class="text-white text-left">Transferencia (administración): @Model.Transfers.Sum(y => y.Amount).ToString("$#,##")</h6></td>
                                                                        </tr>
                                                                    }
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </span>
                                                </span>
                                            </span>
                                        </a>
                                    </h5>
                                </div>
                                <div class="col-2 d-flex align-items-center justify-content-center">
                                    <button class="btn btn-info rounded-circle" data-toggle="modal" data-target="#modalTransfers">
                                        <i class="bi bi-bank"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Column -->
                <!-- Column -->
                <div class="col-md-6 col-sm-12">
                    <div class="card shadow">
                        <div class="card-body">
                            <div class="d-flex flex-row">
                                <div class="round round-lg align-self-center round-danger"><i class="mdi mdi-shopping"></i></div>
                                <div class="m-l-10 align-self-center">
                                    <h3 class="m-b-0 font-lgiht">@Html.DisplayFor(x => Model.TotalExpenses)</h3>
                                    <h5 class="text-muted m-b-0">Gastos del día</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Column -->
            </div>
            <div class="row">
                <!-- Column -->
                <div class="col-md-6 col-sm-12">
                    <div class="card shadow">
                        <div class="card-body">
                            <div class="d-flex flex-row">
                                <div class="round round-lg align-self-center round-success"><i class="mdi mdi-checkbox-marked-circle-outline"></i></div>
                                <div class="m-l-10 align-self-center">
                                    <h3 class="m-b-0 font-lgiht">@Html.DisplayFor(x => Model.CompletedCarts)</h3>
                                    <h5 class="text-muted m-b-0">Clientes visitados</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Column -->
                <!-- Column -->
                <div class="col-md-6 col-sm-12">
                    <div class="card shadow">
                        <div class="card-body">
                            <div class="d-flex flex-row">
                                <div class="round round-lg align-self-center round-warning"><i class="mdi mdi-clock-fast"></i></div>
                                <div class="m-l-10 align-self-center">
                                    <h3 class="m-b-0 font-lgiht">@Html.DisplayFor(x => Model.PendingCarts)</h3>
                                    <h5 class="text-muted m-b-0">Clientes por visitar</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Column -->
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-12 px-0">
            <div class="card shadow">
                <div class="card-header mx-0 d-flex row justify-content-between">
                    <div class="col-12 col-md-8 col-lg-6 mb-3 mb-md-0">
                        <h4 class="mb-0">Repartos de <b>@Model.Route.User.UserName</b> para el <b>@Model.Route.DayOfWeek</b></h4>
                    </div>
                    <button type="button" onclick="deleteRoute(@Model.Route.ID)" class="btn btn-outline-danger btn-rounded px-3 ml-auto" style="max-width: fit-content;">Eliminar planilla</button>
                </div>
                <div class="card-body pl-0 pr-1">
                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            <div class="mb-2 px-3 justify-content-end">
                                <input type="text" class="form-control" id="searchInput" placeholder="Buscar">
                            </div>

                            <!-- FILTRO DE BÚSQUEDA -->
                            <div class="col-12 mb-2">
                                <div class="accordion" id="myAccordion">
                                    <div cla`ss="card shadow rounded">
                                        <div class="card-header p-2" id="headingOne">
                                            <h5 class="mb-0">
                                                <button class="btn btn-info collapsed" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                                                    Filtros
                                                </button>
                                            </h5>
                                        </div>

                                        <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#myAccordion">
                                            <div class="card-body">
                                                <div class="form-group mb-2 px-3">
                                                    @Html.DropDownList("estadoSelect", Model.CartStates, new { @class = "form-control form-select", @id = "estadoSelect" })
                                                </div>
                                                <div class="form-group mb-2 px-3">
                                                    @Html.DropDownList("productSelect", Model.ProductTypes, new { @class = "form-control form-select", @id = "productSelect" })
                                                </div>
                                                <div class="form-group mb-2 px-3">
                                                    <select class="form-control" id="typeSelect">
                                                        <option value="">Por tipo de servicio</option>
                                                        <option value="Abono">Abono</option>
                                                        <option value="Bajada">Bajada</option>
                                                    </select>
                                                </div>
                                                <div class="form-group mb-2 px-3">
                                                    @Html.DropDownList("paymentMethodSelect", Model.PaymentTypes, new { @class = "form-control form-select", @id = "paymentMethodSelect" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12 my-3">
                            <div class="d-flex flex-row justify-content-end mx-3">
                                <a class="btn btn-info btn-rounded float-right" asp-area="" asp-controller="Routes" asp-action="ManualCart" asp-route-id="@Model.Route.ID">Agregar fuera de reparto</a>
                            </div>
                        </div>
                    </div>

                    <!-- TIMELINE DE CLIENTES -->
                    <div class="col-12 col-timeline">
                        @foreach (Cart cart in Model.Route.Carts.OrderBy(x => x.Priority))
                        {
                            <div class="card shadow">
                                <div class="card-body">
                                    <div class="d-flex flex-row justify-content-between align-items-center">
                                        @if (cart.State == State.Confirmed)
                                        {
                                            <h4 class="card-title mb-0 name-element" style="color: #30d577">@Html.DisplayFor(x => cart.Client.Name) #@Html.DisplayFor(x => cart.Client.ID) - @Html.DisplayFor(x => cart.State)</h4>
                                        }
                                        else if (cart.State == State.Ausent || cart.State == State.NotNeeded || cart.State == State.Holidays)
                                        {
                                            <h4 class="card-title mb-0 name-element" style="color: #ffc107">@Html.DisplayFor(x => cart.Client.Name) #@Html.DisplayFor(x => cart.Client.ID) - @Html.DisplayFor(x => cart.State)</h4>
                                        }
                                        else if (cart.State == State.Pending)
                                        {
                                            <h4 class="card-title mb-0 name-element" style="color: #6c757d">@Html.DisplayFor(x => cart.Client.Name) #@Html.DisplayFor(x => cart.Client.ID) - @Html.DisplayFor(x => cart.State)</h4>
                                        }
                                        else
                                        {
                                            <h4 class="card-title mb-0 name-element" style="color: #6c757d">@Html.DisplayFor(x => cart.Client.Name) #@Html.DisplayFor(x => cart.Client.ID)</h4>
                                        }
                                        <button class="btn btn-info rounded-circle mr-2 h-100" tabindex="-1" onclick="getClientHistory(@cart.ClientID, '@cart.Client.Name')"><i class="bi bi-clipboard"></i></button>
                                    </div>
                                    <p class="m-0">
                                        <small class="text-muted">Bajada #@cart.ID</small> -
                                        <small class="text-muted">Creada: @cart.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small> -
                                        <small class="text-muted">Últ. modif: @cart.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</small> -

                                        <!-- Mostrar las deudas de cada cliente -->
                                        @if (cart.Client.Debt == 0)
                                        {
                                            <small class="text-muted">Sin deuda</small>
                                        }
                                        else if (cart.Client.Debt > 0)
                                        {
                                            <small class="text-danger">Deuda: $@Html.DisplayFor(x => cart.Client.Debt)</small>
                                        }
                                        else
                                        {
                                            <small class="text-success">A favor: $@((cart.Client.Debt * -1).ToString("#,##"))</small>
                                        }
                                    </p>

                                    <p class="mb-0"><small class="text-muted address-element"><i class="bi bi-house-door"></i> @Html.DisplayFor(x => cart.Client.Address)&nbsp;&nbsp;-&nbsp;&nbsp;<i class="bi bi-telephone"></i> @Html.DisplayFor(x => cart.Client.Phone)</small></p>
                                    <ul class="pl-4">
                                        @foreach (var product in cart.Client.Products)
                                        {
                                            <li><small>@product.Product.Type.GetDisplayName() - Stock: @product.Stock</small></li>
                                        }
                                    </ul>

                                    <!--Bajada confirmada -->
                                    @if (cart.State == State.Confirmed)
                                    {
                                        <hr />
                                        <div class="row justify-content-between">
                                            @if (cart.AbonoProducts.Any())
                                            {
                                                <div class="col-12 col-md-6 col-lg-4 p-2">
                                                    <h3 class="type-element text-muted mb-0">Abonos</h3>
                                                    <div class="table-responsive">
                                                        <table class="table">
                                                            <thead>
                                                                <tr>
                                                                    <th>Cantidad</th>
                                                                    <th>Producto</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (CartAbonoProduct product in cart.AbonoProducts)
                                                                {
                                                                    <tr>
                                                                        <td>@Html.DisplayFor(x => product.Quantity)</td>
                                                                        <td class="product-element">@product.Type.GetDisplayName()</td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            }
                                            @if (cart.Products.Any())
                                            {
                                                <div class="col-12 col-md-6 col-lg-4 p-2">
                                                    <h3 class="type-element text-muted mb-0">Bajada</h3>
                                                    <div class="table-responsive">
                                                        <table class="table">
                                                            <thead>
                                                                <tr>
                                                                    <th>Cantidad</th>
                                                                    <th>Producto</th>
                                                                    <th>Precio</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (CartProduct product in cart.Products)
                                                                {
                                                                    <tr>
                                                                        <td>@Html.DisplayFor(x => product.Quantity)</td>
                                                                        <td class="product-element">@product.Type.GetDisplayName()</td>
                                                                        <td>@Html.DisplayFor(x => product.SettedPrice)</td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            }
                                            @if (cart.ReturnedProducts.Any())
                                            {
                                                <div class="col-12 col-md-6 col-lg-4 p-2">
                                                    <h3 class="type-element text-muted mb-0">Devoluciones</h3>
                                                    <div class="table-responsive">
                                                        <table class="table">
                                                            <thead>
                                                                <tr>
                                                                    <th>Cantidad</th>
                                                                    <th>Producto</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (ReturnedProduct product in cart.ReturnedProducts)
                                                                {
                                                                    <tr>
                                                                        <td>@Html.DisplayFor(x => product.Quantity)</td>
                                                                        <td class="product-element">@product.Type.GetDisplayName()</td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            }
                                        </div>

                                        <div class="d-flex flex-md-row flex-column justify-content-end">
                                            <button type="button" onclick="getReturnedProducts('@cart.ClientID', '@cart.Client.Name', '@cart.ID')" class="btn btn-sm btn-info btn-rounded px-3 mb-2 mb-md-0 ml-auto ml-md-0">Devuelve</button>
                                            <a asp-area="" asp-controller="Carts" asp-action="Edit" asp-route-id="@cart.ID" target="_blank" class="btn btn-sm btn-info btn-rounded px-3 ml-auto ml-md-2">Editar Bajada</a>
                                        </div>
                                        <hr>
                                        <div class="d-flex flex-row justify-content-start">
                                            <ul>
                                                @foreach (CartPaymentMethod paymentMethod in cart.PaymentMethods)
                                                {
                                                    <li class="paymentMethod-element">@Html.DisplayFor(x => paymentMethod.PaymentMethod.Name): $<strong class="amount-value"> @Html.DisplayFor(x => paymentMethod.Amount)</strong></li>
                                                }
                                            </ul>
                                        </div>
                                        <hr />
                                        <div class="d-flex flex-row justify-content-end">
                                            <button type="button" class="btn btn-sm btn-danger btn-rounded px-3" onclick="deleteCart(@cart.ID)">Eliminar</button>
                                        </div>
                                    }

                                    <!--Bajada pendiente -->
                                    @if (cart.State == State.Pending)
                                    {
                                        <div class="d-flex flex-row justify-content-end">
                                            <div class="btn-group">
                                                <button type="button" tabindex="-1" class="btn btn-info btn-sm dropdown-toggle" data-toggle="dropdown">Acción</button>
                                                <div class="dropdown-menu">
                                                    @foreach (State state in Model.States)
                                                    {
                                                        <button class="dropdown-item" type="button" style="cursor: pointer;" onclick="setState(@cart.ID, @((int)state), '@state.GetDisplayName().ToLower()')">@state.GetDisplayName()</button>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <hr />
                                        <form method="post" asp-controller="Carts" asp-action="Confirm" asp-route-Cart.ID="@cart.ID" asp-route-Cart.ClientID="@cart.ClientID" id="form-confirmCart_@cart.ID">
                                            @Html.AntiForgeryToken()
                                            <div class="row">
                                                @if (Model.Clients.First(x => x.ClientID == cart.ClientID).AbonoProducts.Count > 0)
                                                {
                                                    <div class="col-lg-4 col-md-4 col-sm-12">
                                                        <h3>Abonos</h3>
                                                        <table class="table" data-name="tableAbonoProducts" data-cart-id="@cart.ID">
                                                            <thead>
                                                                <tr>
                                                                    <th class="col-4">Producto</th>
                                                                    <th class="col-4">Bajó</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var product in Model.Clients.First(x => x.ClientID == cart.ClientID).AbonoProducts)
                                                                {
                                                                    <tr data-type="@((int)product.Type)">
                                                                        <td>@product.Type.GetDisplayName() - Dispone: @product.Available</td>
                                                                        <td><input type="number" name="quantity" class="form-control" value="" min="1" max="@product.Available" /></td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                }
                                                @if (Model.Clients.First(x => x.ClientID == cart.ClientID).Products.Count > 0)
                                                {
                                                    <div class="col-lg-4 col-md-4 col-sm-12">
                                                        <h3>Bajada</h3>
                                                        <table class="table" data-name="tableProducts" data-cart-id="@cart.ID">
                                                            <thead>
                                                                <tr>
                                                                    <th class="col-4">Producto</th>
                                                                    <th class="col-4">Bajó</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var product in Model.Clients.First(x => x.ClientID == cart.ClientID).Products)
                                                                {
                                                                    <tr data-type="@((int)product.Type)">
                                                                        <td>@product.Name - <i class="price"> @Html.DisplayFor(x => product.Price)</i></td>
                                                                        <td><input type="number" class="form-control" name="quantity" value="" min="1" /></td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                }
                                                <div class="col-lg-4 col-md-4 col-sm-12" id="totalCartContainer_@cart.ID">
                                                    <div class="d-flex row justify-content-between">
                                                        <strong class="col-12 h4 align-items-center justify-content-end mb-0 totalCart">Total: $0</strong>
                                                    </div>
                                                    @* <div class="col-12 py-3 d-flex justify-content-center align-items-center">
                                                        <div class="btn-group btn-group-toggle" data-toggle="buttons">
                                                            <label class="btn btn-secondary active">
